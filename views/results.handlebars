<div class="max-w-screen-md mx-auto">
  <div class="headline text-xl my-5">Birthday Bot</div>
  {{#if results.error}}
  <section class="container items-baseline">      
    <h2 class="text-xl">Sorry!</h2>
      <p>Can't get that birthday!</p>
      {{#if results.empty}}
        <p>Please enter a name.</p>
      {{/if}}
  </section>
  {{else}}
  <article>
    <div class="flex">
      <section class="flex-1 p-10 text-center border-r">
        {{#if results.spotifyImage}}
          <!-- image -->
          <div class="artist-photo-wrapper rounded-full mx-auto">
            <img src="/birthdays/public/placeimg_640_480_people.jpg" class="block" alt="{{results.spotifyName}}" />
          </div>
          {{else}}
          <div class="text-white">
              <!-- from https://iconmonstr.com/user-20-svg/ -->
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto fill-current" width="150" height="150" viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm7.753 18.305c-.261-.586-.789-.991-1.871-1.241-2.293-.529-4.428-.993-3.393-2.945 3.145-5.942.833-9.119-2.489-9.119-3.388 0-5.644 3.299-2.489 9.119 1.066 1.964-1.148 2.427-3.393 2.945-1.084.25-1.608.658-1.867 1.246-1.405-1.723-2.251-3.919-2.251-6.31 0-5.514 4.486-10 10-10s10 4.486 10 10c0 2.389-.845 4.583-2.247 6.305z"/></svg>
          </div>
        {{/if}}
        <h1 class="text-lg mt-2">{{results.pageName}}</h1>
        <p class="text-sm italic">{{results.description}}</p>
      </section>
      <section class="flex-1 p-10 text-center text-white">
        <!-- from https://iconmonstr.com/candy-17-svg/ -->
        <svg width="150" height="150" viewBox="0 0 24 24" class="fill-current mx-auto" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"><path d="M23 20v4h-22v-4h22zm-22-1v-3h22v3h-22zm20.453-9c1.256.011 2.534 1.051 2.547 2.5.012 1.38-1.176 2.5-2.625 2.5-1.028 0-1.92-.564-2.35-1.386-.43.822-1.322 1.386-2.35 1.386-1.019 0-1.903-.554-2.337-1.362-.436.808-1.319 1.362-2.338 1.362-1.019 0-1.902-.554-2.337-1.362-.435.808-1.319 1.362-2.338 1.362-1.028 0-1.919-.564-2.35-1.386-.431.822-1.322 1.386-2.35 1.386-1.449 0-2.637-1.12-2.625-2.5.013-1.449 1.292-2.489 2.546-2.5h1.454v-2.974h2v2.974h5v-5h2v5h5v-3h2v3h1.453zm-17.3-3.451c-1.897-.621-1.351-3.444.89-4.523.08 1.422 1.957 1.566 1.957 3.002 0 .602-.441 1.274-1.084 1.521.154-.509-.186-1.416-.88-1.809-.702.407-1.063 1.302-.883 1.809zm13.999-.026c-1.896-.621-1.35-3.444.891-4.523.08 1.422 1.957 1.566 1.957 3.002 0 .602-.441 1.274-1.084 1.521.153-.509-.186-1.416-.88-1.809-.702.407-1.063 1.302-.884 1.809zm-6.999-2c-1.897-.621-1.351-3.444.89-4.523.08 1.422 1.957 1.566 1.957 3.002 0 .602-.441 1.274-1.084 1.521.153-.509-.186-1.416-.88-1.809-.702.407-1.063 1.302-.883 1.809z"/></svg>
        <div class="text-lg mt-2">{{results.month}} {{results.day}}{{results.suffix}}</div>
      </section>
    </div>
      {{#if results.spotify}}
      <section class="container items-center my-8">
        <div class="text-indigo-800">
          <!-- from https://iconmonstr.com/disc-5-svg/ -->
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24"><path class="fill-current" d="M24 20.682c-.002 1.555-1.17 2.318-2.24 2.318-.903 0-1.76-.544-1.76-1.616 0-1.104 1.201-2.118 2.515-2.118.161 0 .323.015.485.047v-4.312l-6 1.229v5.45c-.002 1.556-1.18 2.32-2.258 2.32-.906 0-1.742-.542-1.742-1.61 0-1.106 1.201-2.125 2.518-2.125.16 0 .322.015.484.047v-6.52l7.998-1.792v8.682zm-13-6.682c-1.657 0-3-1.343-3-3s1.343-3 3-3 3 1.343 3 3-1.343 3-3 3zm0-1c1.103 0 2-.897 2-2s-.897-2-2-2-2 .897-2 2 .897 2 2 2zm-1.818 2.646c-1.293-.508-2.319-1.534-2.827-2.827l-1.025.128c.6 1.746 1.979 3.125 3.725 3.724l.127-1.025zm-4.869-2.572l-1 .125c.757 2.648 2.84 4.731 5.488 5.488l.125-1c-2.194-.683-3.93-2.418-4.613-4.613zm8.505-6.72c1.293.508 2.319 1.534 2.827 2.828l1.025-.128c-.6-1.746-1.979-3.125-3.725-3.725l-.127 1.025zm-1.771 15.644c.082-.734.378-1.441.878-2.045-.304.03-.613.047-.925.047-4.963 0-9-4.038-9-9s4.037-9 9-9c4.912 0 8.91 3.957 8.992 8.849l1.978-.443c-.311-5.798-5.096-10.406-10.97-10.406-6.075 0-11 4.925-11 11s4.925 11 11 11l.047-.002zm2.151-18.685l-.125 1c2.195.682 3.931 2.418 4.613 4.613l1-.125c-.755-2.648-2.838-4.732-5.488-5.488z"/></svg>
        </div>
        <p>{{results.spotifyName}} has {{results.genrey}} music on Spotify, where they have {{results.followers}} followers.</p>
          <a href="{{results.spotifyLink}}" target="_blank" class="btn inline-block">Listen</a>
      </section>
      {{/if}}
    </article>
  {{/if}}
</div>

<div class="bg-indigo-100 text-black my-8 py-8">
  <div class="max-w-screen-md mx-auto">
    <h2 class="headline text-4xl text-center text-indigo-800 mb-8">Try Again?</h2>
    {{> form}}
  </div>
</div>
