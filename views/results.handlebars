  {{#if results.empty}}
  <p>Please enter a name.</p>
  {{/if}}
{{else}}
<h2>Got it!</h2>
<article>
  <div class="flex">
    <section class="flex-1 p-10 text-center border-r">
      {{#if results.imageName}}
        <!-- image -->
      {{/if}}
      {{results.name}}
    </section>
    <section class="flex-1 p-10 text-center">
      {{results.month}} {{results.day}}{{results.suffix}}
    </section>
  </div>
    {{#if results.spotify}}
    <section class="bg-white text-black my-4 py-10 px-6 border-2 rounded-lg border-black shadow-md flex space-x-6 items-center">
